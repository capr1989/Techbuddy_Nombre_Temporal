---
import Layout from "../../components/Layout.astro";
import AuthForm from "../../components/AuthForm.astro";

const fields = [
  { label: "First Name", name: "first-name", type: "text", required: true },
  { label: "Last Name", name: "last-name", type: "text", required: true },
  { label: "Phone Number", name: "phone-number", type: "tel", required: false },
  { label: "Email", name: "email", type: "email", required: true },
  { label: "Password", name: "password", type: "password", required: true },
];
---

<Layout title="Sign Up">
  <h1>Sign Up</h1>
  <AuthForm action="/api/auth/register" method="POST" fields={fields} />
</Layout>
